@model IEnumerable<Garage2.Models.ViewModels.AdvancedSearchViewModel>

@{
    ViewData["Title"] = "AdvancedSearchList";
}

<h1>AdvancedSearchList</h1>



<table class="table" style="border-collapse: collapse">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicensePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="imgtd">
                    @switch (item.VehicleType)
                    {
                        case VehicleType._:
                            break;
                        case VehicleType.Car:

                            <img src="@Url.Content("../img/car.jpg")" />
                            break;
                        case VehicleType.Motorcycle:

                            <img src="@Url.Content("../img/motorbike.jpg")" />
                            break;
                        case VehicleType.Bus:

                            <img src="@Url.Content("../img/bus.jpg")" />
                            break;
                        case VehicleType.Boat:


                            <img src="@Url.Content("../img/boat.jpg")" />
                            break;
                        case VehicleType.Truck:
                            <img src="@Url.Content("../img/truck.jpg")" />
                            break;
                        default:

                            break;
                    }




                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LicensePlate)
                </td>
                <td>
                    @item.Color
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalTime)
                </td>

                @if (item.State == Globals.CheckInState)
                {
                    <td>-</td>
                    <td>-</td>
                }
                else
                {
                    <td>@item.DepartureTime</td>
                    <td>
                        @item.ParkedTime.Hours hr @item.ParkedTime.Minutes min @item.ParkedTime.Seconds sec
                    </td>
                }





                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>

                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.FirstOrDefault() == null)
{
    <h5>Vehicle Not found</h5>
}


