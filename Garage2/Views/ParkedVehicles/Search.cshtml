@model IEnumerable<SearchViewModel>

@{
	ViewData["Title"] = "Search";
}


<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.LicensePlate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.VehicleType)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Make)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Model)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ArrivalTime)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ParkedTime)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.LicensePlate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.VehicleType)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Make)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Model)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ArrivalTime)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ParkedTime)
			</td>
			<td>
				<a asp-action="Details" asp-route-id="@item.Id">Details</a>
			</td>
			<td>
				<form>
					<input type="submit" value="Checkout" asp-controller="ParkedVehicles" asp-action="CheckOut" asp-route-id="@item.Id" />
				</form>
			</td>
		</tr>
		}
	</tbody>
</table>
